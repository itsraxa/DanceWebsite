extends base.pug

block scripts
    script(src="/static/index.js") 

block style
    style 
      include ../static/style.css
      include ../static/contactstyle.css

block content
    div.container
        form(action="/contact", method="post", class="formClass") 
            h1 Contact Form
            input(type="text" , name="name" , class="myinput" , placeholder="Enter Your Name" )
            input(type="text" , name="age" , class="myinput" , placeholder="Enter Your Age" )
            input(type="text" , name="phno" , class="myinput" , placeholder="Enter Your Phone Number" )
            input(type="text" , name="address" , class="myinput" , placeholder="Enter Your Address" )
            input(type="text" , name="more" , class="myinput" , placeholder="Enter More About You" )
            button.btn
                | Submit